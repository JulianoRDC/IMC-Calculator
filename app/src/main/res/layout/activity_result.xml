<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".ResultActivity">

    <LinearLayout
        android:id="@+id/vg_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_bg"
        android:orientation="vertical" >
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="64dp"
            android:layout_marginBottom="12dp"
            android:src="@drawable/ic_weight"
            app:tint="@color/white" />
        <TextView
            android:text="Calculador IMC"
            android:layout_marginStart="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="24dp" />
        <TextView
            android:text="Confira abaixo o resultado do IMC e a classificação:"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="normal"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/tv_result"
            android:textSize="60sp"
            android:gravity="center"
            android:textStyle="bold"
            android:maxLength="5"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="48dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            tools:text="23.66" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_classificacao_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="132sp"
        android:text="A classificação do seu IMC é: "
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tv_classificacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        tools:text="NORMAL"
        android:textSize="32sp"/>

</LinearLayout>